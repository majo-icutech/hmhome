#!/usr/bin/env tclsh
set downloadCmd [regexp {\mcmd=download\M} $env(QUERY_STRING)]
if {$downloadCmd} {
  # forward to download page
  puts -nonewline "Content-Type: text/html; charset=utf-8\r\n\r\n"  
  puts "<html><head><meta http-equiv='refresh' content='0; url=https://github.com/majo-icutech/hmhome/releases' /></head></html>"
} else {
  # retrieve version of latest release
  set infoUrl https://api.github.com/repos/majo-icutech/hmhome/releases/latest
  set infoError [catch {
    set info [exec wget -q -O- --no-check-certificate $infoUrl]
    set found [regexp {\"tag_name\"\s*:\s*\"([^\"]*)\"} $info -> version]
    if {!$found} error
  }]
  puts -nonewline "Content-Type: text/plain; charset=utf-8\r\n\r\n"
  if {$infoError} {
    puts "N/A"
  } else {
    puts $version
  }
}

